{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-watch",
      "allow": [
        "*/**"
      ]
    },
    {
      "identifier": "fs:allow-fstat",
      "allow": [
        "*/**"
      ]
    },
    "log:default",
    "fs:default"
  ]
}